{
  "id": "farcaster-reminder-app",
  "name": "Reminder",
  "description": "Save reminders with a timestamp. Generates a small payment draft for you when you save.",
  "icon": "https://farcaster-reminder-app.vercel.app/icon.png",
  "developer": {
    "name": "mataramasuko95",
    "url": "https://farcaster-reminder-app.vercel.app"
  },
  "website": "https://farcaster-reminder-app.vercel.app",
  "platforms": [
    "warpcast"
  ],
  "endpoints": {
    "pay": "https://farcaster-reminder-app.vercel.app/api/pay"
  },
  "actions": [
    {
      "type": "post",
      "name": "Save Reminder + Create Payment Draft",
      "description": "User writes a reminder and time. We draft a tiny onchain payment they can send.",
      "endpoint": "pay",
      "input": {
        "type": "object",
        "properties": {
          "fid": {
            "type": "number",
            "description": "User's Farcaster FID"
          },
          "usdAmount": {
            "type": "number",
            "description": "How much USD-worth of ETH to send (e.g. 0.05)"
          },
          "ethAddress": {
            "type": "string",
            "description": "Recipient wallet address"
          }
        },
        "required": ["fid", "usdAmount", "ethAddress"]
      }
    }
  ]
}
