{
  "schema_version": 1,
  "id": "farcaster-reminder-app",
  "name": "Reminder",
  "description": "Write a reminder and pick a date/time. Save will prepare a payment draft.",
  "icon": "https://farcaster-reminder-app.vercel.app/icon.png",
  "developer": {
    "name": "mataramasuko95",
    "url": "https://farcaster-reminder-app.vercel.app"
  },
  "website": "https://farcaster-reminder-app.vercel.app",
  "platforms": ["warpcast"],
  "endpoints": {
    "pay": "https://farcaster-reminder-app.vercel.app/api/pay"
  },
  "actions": [
    {
      "type": "post",
      "name": "Save Reminder",
      "description": "Save a reminder and get a payment draft.",
      "endpoint": "pay",
      "input": {
        "type": "object",
        "properties": {
          "fid": {
            "type": "number",
            "description": "Farcaster fid"
          },
          "usdAmount": {
            "type": "number",
            "description": "USD amount (ex: 0.05)"
          },
          "ethAddress": {
            "type": "string",
            "description": "Wallet address"
          }
        },
        "required": ["fid", "usdAmount", "ethAddress"]
      }
    }
  ]
}

