"schema_version": 1,
{
  "id": "farcaster-reminder-app",
  "name": "Reminder",
  "description": "Save reminders with a date and time. The app prepares a small ETH payment when you save a note.",
  "icon": "https://farcaster-reminder-app.vercel.app/icon.png",
  "developer": {
    "name": "mataramasuko95",
    "url": "https://farcaster-reminder-app.vercel.app"
  },
  "website": "https://farcaster-reminder-app.vercel.app",
  "platforms": ["warpcast"],
  "endpoints": {
    "pay": "https://farcaster-reminder-app.vercel.app/api/pay"
  },
  "actions": [
    {
      "type": "post",
