      "input": {
        "type": "object",
        "properties": {
          "fid": {
            "type": "number",
            "description": "Farcaster FID"
          },
          "usdAmount": {
            "type": "number",
            "description": "USD amount (â‰ˆ $0.05)"
          },
          "ethAddress": {
            "type": "string",
            "description": "Wallet address for payment"
          }
        },
        "required": ["fid", "usdAmount", "ethAddress"]
      }
    }
  ]
}
